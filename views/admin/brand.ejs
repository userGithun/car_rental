<%- include('./headerAd.ejs') %>

    <main id="main-content" class="site-main-dashboard">
        <div class="page-dashboard-wrap">
            <div class="dashboard">
                <div class="row ">
                    <div class="col-12">
                        <h4 class="title-dashboard">Brand</h4>
                    </div>
                </div>
                <div class="themesflat-container">
                    <div class="tf-add-cart">
                        <form action="/admin/brandInsert" enctype="multipart/form-data" method="post" id="submit-add-cart"
                            class="form-add-cart needs-validation" novalidate>
                            <fieldset id="information" class="mb-60">
                                <div class="inner-title mb-30">

                                    <h3 class="title">Add Your Brand</h3>
                                    <% if(msg.length>0){%>
                                        <div class="text-center alert alert-success">
                                            <%= msg %>
                                        </div>
                                        <%}%>
                                            <% if(msg1.length>0){%>
                                                <div class="text-center alert alert-success">
                                                    <%= msg1 %>
                                                </div>
                                                <%}%>
                                                    <% if(msg2.length>0){%>
                                                        <div class="text-center alert alert-danger">
                                                            <%= msg2 %>
                                                        </div>
                                                        <%}%>
                                </div>
                                <div class="tfad-listing-title mb-30">
                                    <div class="form-group">
                                        <label>Listing Name</label>
                                        <input type="text" id="listing-title" class="form-control" name="brand"
                                            placeholder="Enter Brand here" value="">
                                    </div>
                                    <br>
                                    <div class="upload-image">
                                        <label for="photoLoad" class="uploadLabel">
                                            <i class="icon-Group4"></i>
                                            <span>Add a Logo</span>
                                            <input type="file" id="photoLoad" class="photoLoad" name="image" accept="image/*">
                                        </label>
                                    </div>
                                </div>

                                <button type="submit" class="button-save-listing">Add
                                    Brand</button>
                            </fieldset>
                        </form>
                        <br><br>
                        

                    </div>
                </div>

                <!--Brand display start-->
                <div class="row ">
                    <div class="col-12">
                        <h4 class="title-dashboard">Brand Display</h4>
                    </div>
                    <br><br>
                    <br><br>
                    <table class="table table-bordered table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th colspan="5" class="text-center">Brand List</th>
                            </tr>
                        </thead>
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Brand Name</th>
                                <th>Creation Date</th>
                                <th>Update Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% b.forEach((brand, index)=> { %>
                                <tr>
                                    <td>
                                        <%= index + 1 %>
                                    </td>
                                    <td>
                                        <%= brand.brand %>
                                    </td>
                                    <td>
                                        <%= brand.createdAt.toLocaleDateString() %>
                                    </td>
                                    <td>
                                        <% if (brand.updatedAt && brand.updatedAt.getTime()
                                            !==brand.createdAt.getTime()) { %>
                                            <%= brand.updatedAt.toLocaleDateString() %>
                                                <% } else { %>
                                                    -
                                                    <% } %>
                                    </td>
                                    <td>
                                        <a href="/admin/editbrand/<%= brand._id %>"
                                            class="btn btn-sm btn-primary">Edit</a>
                                        <a href="/admin/deletebrand/<%= brand._id %>"
                                            class="btn btn-sm btn-danger">Delete</a>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>


                </div>
                <br><br><br><br><br>

            </div>
        </div>

    </main>

    </div>
    </div>

    </div>
    <!-- /#page -->

    <!-- Button Top -->
    <a id="scroll-top" class="button-go"></a>
    <!-- Button Top -->

    <!-- Modal -->
