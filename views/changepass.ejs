<%- include ('./header.ejs') %>
<div class="container py-5">
  <div class="row">
    <!-- Left Side (30%) -->
    <div class="col-md-4 text-center border-end">
      <img src="<%= i.url %>" alt="Profile Image" class="mb-3" style="width: 30%; max-width: 200px; border-radius: 10px;">
       
      <div class="d-grid gap-2 px-4">
        <a href="/profile"> <button class="btn btn-outline-dark">Update Profile</button></a>
        <a href="/changepass"><button class="btn btn-dark">Change Password</button></a>
       <a href="/booking"><button class="btn btn-outline-dark">My Booking</button></a> 
        <a href="/logout"><button class="btn btn-outline-danger">Logout</button></a>
      </div>
    </div>

    <!-- Right Side (70%) -->
    <div class="col-md-8">
      <div class="d-flex justify-content-between align-items-center mt-3">
        <h4>Change Password</h4>
        <span class="text-muted">Hello, <strong><%= n %></strong></span>
      </div>

      <!-- Update Profile Form -->
      <div class="mt-4">
        <form action="/changePassword" method="post">
          <div class="mb-3">
            <label for="name" class="form-label">Old Password</label>
            <input type="text" class="form-control"  name="op" placeholder="">
          </div>
          <div class="mb-3">
            <label for="" class="form-label">New Password</label>
            <input type="password" class="form-control" name="np"  placeholder="">
          </div>
          <div class="mb-3">
            <label for="" class="form-label">Confirm Password</label>
            <input type="password" name="cp" class="form-control" >
          </div>
          <button class="btn btn-danger" type="submit">Save Changes</button>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<%- include('./footer.ejs') %>
